{
  "name": "tofi-swiss-marketplace",
  "version": "1.0.0",
  "description": "Swiss Flowers Marketplace MVP - Complete e-commerce platform for Swiss flower sellers",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "db:push": "cd packages/database && pnpm db:push",
    "db:seed": "cd packages/database && pnpm db:seed",
    "db:studio": "cd packages/database && pnpm db:studio",
    "db:reset": "cd packages/database && pnpm db:reset",
    "clean": "turbo run clean"
  },
  "dependencies": {
    "@prisma/client": "^5.6.0",
    "@trpc/client": "^10.45.0",
    "@trpc/next": "^10.45.0",
    "@trpc/react-query": "^10.45.0",
    "@trpc/server": "^10.45.0",
    "next": "^14.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.7",
    "next-intl": "^3.3.0",
    "react-hook-form": "^7.48.2",
    "zod": "^3.22.4",
    "@hookform/resolvers": "^3.3.2",
    "chart.js": "^4.4.0",
    "react-chartjs-2": "^5.2.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.0.0",
    "lucide-react": "^0.294.0",
    "@tanstack/react-query": "^5.8.4",
    "superjson": "^2.2.1"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "typescript": "^5.2.2",
    "tailwindcss": "^3.3.5",
    "postcss": "^8.4.31",
    "autoprefixer": "^10.4.16",
    "prisma": "^5.6.0",
    "turbo": "^1.10.16",
    "eslint": "^8.54.0",
    "eslint-config-next": "^14.0.3",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.10.0"
}