# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/tofi?schema=public"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-here"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Email (for verification and notifications)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="noreply@tofi.ch"

# File Storage
UPLOAD_BUCKET="tofi-uploads"
UPLOAD_REGION="eu-central-1"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"

# Payment Processing
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# TWINT Integration
TWINT_MERCHANT_ID="your-twint-merchant-id"
TWINT_API_KEY="your-twint-api-key"

# Search (OpenSearch/Elasticsearch)
SEARCH_URL="https://your-opensearch-domain.eu-central-1.es.amazonaws.com"
SEARCH_USERNAME="admin"
SEARCH_PASSWORD="your-search-password"

# Redis Cache
REDIS_URL="redis://localhost:6379"

# Feature Flags
FEATURE_PREORDERS="true"
FEATURE_SUBSCRIPTIONS="false"
FEATURE_CORPORATE_ACCOUNTS="true"

# Monitoring
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
ANALYTICS_ID="G-XXXXXXXXXX"

# Environment
NODE_ENV="development"