# Example Terraform variables file
# Copy this to terraform.tfvars and fill in your values

# Google Cloud Configuration
project_id = "your-gcp-project-id"
region     = "europe-west6"  # Zurich region for Swiss deployment
zone       = "europe-west6-a"

# Environment
environment = "production"
domain_name = "tofi.ch"

# GKE Configuration
machine_type    = "e2-standard-2"
node_count      = 3
min_node_count  = 1
max_node_count  = 10

# Database Configuration
db_tier          = "db-g1-small"
db_disk_size     = 20
db_max_disk_size = 100
db_password      = "your-secure-database-password"

# Redis Configuration
redis_memory_size = 1

# Cloudflare Configuration
cloudflare_api_token = "your-cloudflare-api-token"
cloudflare_zone_id   = "your-cloudflare-zone-id"

# Application Secrets
nextauth_secret           = "your-nextauth-secret-32-characters-minimum"
google_oauth_client_id    = "your-google-oauth-client-id"
google_oauth_client_secret = "your-google-oauth-client-secret"

# Swiss-specific Configuration
swiss_post_api_key = "your-swiss-post-api-key"
twint_merchant_id  = "your-twint-merchant-id"
twint_api_key      = "your-twint-api-key"